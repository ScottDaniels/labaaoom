<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/title_colour</item>
        <item name="android:textColorSecondary">@color/button_pressed</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryDark</item>
    </style>

    <style name="PopUp" parent="@android:style/Theme.Dialog">
        <item name="android:colorBackground">@color/popup_bg</item>
        <item name="android:colorForeground">@color/popup_fg</item>
        <item name="android:textColorPrimary">@color/title_colour</item>
        <item name="android:textColorSecondary">@color/button_pressed</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

</resources>
