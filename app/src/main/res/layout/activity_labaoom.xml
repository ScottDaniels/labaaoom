<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.rocklizard.labaaoom.LaBaaooM">

    <TextView
        android:id="@+id/main_title"
        android:textSize="40sp"
        android:layout_width="215dp"
        android:layout_height="52dp"
        android:background="#000000"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:freezesText="false"
        android:inputType="textPersonName"
        android:text="LaBaaooM!"
        android:textColor="#ffd000"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="187dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="193dp"
        android:background="#000040"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <TextView
        android:id="@+id/username_tag"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:text="User Name:"
        android:textColor="#d0d0d0"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/user_name"
        android:layout_marginLeft="141dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="219dp"
        android:layout_height="25dp"
        android:ems="10"
        android:background="#000040"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:layout_marginLeft="192dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/passwd_tag"/>

    <TextView
        android:id="@+id/passwd_tag"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:text="Password:"
        android:textColor="#d0d0d0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:layout_marginLeft="140dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="134dp"
        app:srcCompat="@mipmap/labaaoom_icon"
        android:layout_marginLeft="229dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/main_title"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="23dp"
        android:background="#006020"
        android:onClick="Attempt_login"
        android:text="Go Forward"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="229dp"
        android:layout_height="15dp"
        android:layout_marginLeft="191dp"
        android:text="A reading skills assessment tool."
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/login_button"/>

     <TextView
        android:id="@+id/copyright"
        android:layout_width="321dp"
        android:layout_height="18dp"
        android:layout_marginLeft="140dp"
        android:text="E. Scott Daniels Georga Tech CS6460 Fall 2017"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/description"/>

</android.support.constraint.ConstraintLayout>
