<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.rocklizard.labaaoom.New_student">

    <EditText
        android:id="@+id/student_name"
        android:layout_width="187dp"
        android:layout_height="30dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#404040"
        android:textColor="#ffffff"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/name_tag"
        app:layout_constraintTop_toBottomOf="@+id/add_user_tag"
        tools:layout_editor_absoluteY="76dp"/>

    <TextView
        android:id="@+id/section"
        android:layout_width="57dp"
        android:layout_height="23dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:text="Section:"
        android:textColor="#e0e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tag"/>

    <TextView
        android:id="@+id/add_user_tag"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:text="Add Student"
        android:textColor="#ffff00"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="57dp"
        android:layout_height="27dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:text="Name:"
        android:textColor="#e0e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_user_tag"/>

    <EditText
        android:id="@+id/section_id"
        android:layout_width="187dp"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="#404040"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/section"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="39dp"
        android:background="#003000"
        android:onClick="Add_clicked"
        android:text="Add"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_id"/>

    <Button
        android:id="@+id/can_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="39dp"
        android:background="#500000"
        android:onClick="Cancel_clicked"
        android:text="Cancel"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_id"/>
</android.support.constraint.ConstraintLayout>
