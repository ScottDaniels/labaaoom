<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.rocklizard.labaaoom.New_student">

    <EditText
        android:id="@+id/student_name"
        android:layout_width="187dp"
        android:layout_height="30dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@color/edit_text_bg"
        android:textColor="@color/edit_text_fg"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/name_tag"
        app:layout_constraintTop_toBottomOf="@+id/add_user_tag"
        android:layout_marginStart="9dp"/>

    <TextView
        android:id="@+id/section"
        android:layout_width="57dp"
        android:layout_height="20dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:text="Section:"
        android:textColor="@color/tag_colour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tag"
        android:layout_marginStart="26dp"/>

    <TextView
        android:id="@+id/add_user_tag"
        android:layout_width="173dp"
        android:layout_height="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:text="Add Student"
        android:textColor="@color/header_colour"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="17dp"/>

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="57dp"
        android:layout_height="21dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="27dp"
        android:text="Name:"
        android:textColor="@color/tag_colour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_user_tag"
        android:layout_marginStart="26dp"/>

    <EditText
        android:id="@+id/section_id"
        android:layout_width="187dp"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="@color/edit_text_bg"
        android:textColor="@color/edit_text_fg"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/section"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        android:layout_marginStart="9dp"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="39dp"
        android:background="@color/button_go_colour"
        android:onClick="Add_clicked"
        android:text="Add"
        android:textColor="@color/edit_text_fg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_id"
        android:layout_marginStart="83dp"/>

    <Button
        android:id="@+id/can_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="211dp"
        android:layout_marginTop="225dp"
        android:background="@color/button_can_colour"
        android:onClick="Cancel_clicked"
        android:text="Cancel"
        android:textColor="@color/edit_text_fg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="211dp"/>

    <TextView
        android:id="@+id/app_title"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:text="LaBaaooM"
        android:textColor="@color/title_colour"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
