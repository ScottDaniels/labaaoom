<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.rocklizard.labaaoom.Modify_student"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/mod_student_name"
        android:layout_width="274dp"
        android:layout_height="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@color/edit_text_bg"
        android:textColor="@color/edit_text_fg"
        android:text=""
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/name_tag"
        android:layout_marginLeft="109dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/section"
        android:layout_width="57dp"
        android:layout_height="20dp"
        android:text="Section:"
        android:textColor="@color/tag_colour"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/mod_student_name"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/mod_user_tag"
        android:layout_width="212dp"
        android:layout_height="42dp"
        android:text="Modify Student"
        android:textColor="@color/header_colour"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="57dp"
        android:layout_height="21dp"
        android:text="Name:"
        android:textColor="@color/tag_colour"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/mod_user_tag"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/mod_section_id"
        android:layout_width="277dp"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="@color/edit_text_bg"
        android:textColor="@color/edit_text_fg"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/section"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/go_button"
        android:onClick="Mod_clicked"
        android:text="Modify"
        android:textColor="@color/edit_text_fg"
        app:layout_constraintLeft_toRightOf="@+id/can_button"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/mod_section_id"/>

    <Button
        android:id="@+id/can_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/can_button"
        android:onClick="Cancel_clicked"
        android:text="Cancel"
        android:textColor="@color/edit_text_fg"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/mod_section_id"
        android:layout_marginLeft="107dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/app_title"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:text="LaBaaooM"
        android:textColor="@color/title_colour"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="240dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
