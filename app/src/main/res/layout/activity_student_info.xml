<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context="com.rocklizard.labaaoom.Student_info"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/last_eval_date"
        android:layout_width="157dp"
        android:layout_height="25dp"
        android:text="19 Sep 2017"
        android:textColor="@color/value"
        android:textSize="24sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/section_name"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/si_app_title"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:text="LaBaaooM"
        android:textColor="@color/title_colour"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/section_tag"
        android:layout_width="48dp"
        android:layout_height="14dp"
        android:text="Section:"
        android:textSize="12sp"
        android:textColor="#c0c0c0"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"/>

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:text="Name:"
        android:textSize="12sp"
        android:textColor="#c0c0c0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/student_name"
        android:layout_width="329dp"
        android:layout_height="27dp"
        android:text="Silly Student"
        android:textSize="24sp"
        android:textColor="@color/value"
        tools:layout_editor_absoluteY="75dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/section_name"
        android:layout_width="157dp"
        android:layout_height="27dp"
        android:text="K.Meyers"
        android:textColor="@color/value"
        android:textSize="24sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/last_tag"
        android:layout_width="93dp"
        android:layout_height="13dp"
        android:text="Last Evaluation:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/section_name"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/last_score_tag"
        android:layout_width="63dp"
        android:layout_height="13dp"
        android:text="Last Score:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        android:layout_marginLeft="208dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        android:layout_marginStart="208dp"/>

    <TextView
        android:id="@+id/ave_tag"
        android:layout_width="73dp"
        android:layout_height="14dp"
        android:text="Average:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/last_eval_score"
        android:layout_marginLeft="208dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="208dp"/>

    <TextView
        android:id="@+id/last_eval_score"
        android:layout_width="109dp"
        android:layout_height="26dp"
        android:text="26wpm "
        android:textColor="@color/value"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="125dp"
        android:layout_marginLeft="208dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="208dp"/>

    <TextView
        android:id="@+id/ave_score"
        android:layout_width="132dp"
        android:layout_height="26dp"
        android:text="23wpm"
        android:textColor="@color/value"
        android:textSize="24sp"
        android:layout_marginLeft="208dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/last_eval_score"
        android:layout_marginStart="208dp"/>

    <LinearLayout
        android:id="@+id/student_graph_left"
        android:layout_width="181dp"
        android:layout_height="97dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:background="#303030"
        app:layout_constraintTop_toBottomOf="@+id/last_eval_date"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
