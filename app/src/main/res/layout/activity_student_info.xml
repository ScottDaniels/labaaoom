<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context="com.rocklizard.labaaoom.Student_info"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/last_eval_date"
        android:layout_width="158dp"
        android:layout_height="33dp"
        android:text="19 Sep 2017"
        android:textColor="@color/value"
        android:textSize="24sp"
        android:layout_marginLeft="227dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/last_date_tag"/>

    <TextView
        android:id="@+id/si_app_title"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:text="LaBaaooM"
        android:textColor="@color/title_colour"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/section_tag"
        android:layout_width="48dp"
        android:layout_height="15dp"
        android:text="Section:"
        android:textSize="12sp"
        android:textColor="#c0c0c0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:text="Name:"
        android:textSize="12sp"
        android:textColor="#c0c0c0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="61dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/student_name"
        android:layout_width="331dp"
        android:layout_height="35dp"
        android:text="Silly Student"
        android:textSize="24sp"
        android:textColor="@color/value"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/name_tag"/>

    <TextView
        android:id="@+id/section_name"
        android:layout_width="156dp"
        android:layout_height="34dp"
        android:text="K.Meyers"
        android:textColor="@color/value"
        android:textSize="24sp"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/section_tag"/>

    <TextView
        android:id="@+id/last_date_tag"
        android:layout_width="93dp"
        android:layout_height="17dp"
        android:text="Last Evaluation:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/student_name"
        app:layout_constraintLeft_toRightOf="@+id/section_name"
        android:layout_marginLeft="39dp"/>

    <TextView
        android:id="@+id/ave_tag"
        android:layout_width="97dp"
        android:layout_height="15dp"
        android:text="Average Score:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        android:layout_marginLeft="319dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/right_graph_tag"/>

    <TextView
        android:id="@+id/last_wscore_tag"
        android:layout_width="73dp"
        android:layout_height="14dp"
        android:text="Last Rand Score:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/right_graph_tag"
        app:layout_constraintLeft_toRightOf="@+id/ave_wscore"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/last_weval_score"
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:text="RRL wpm "
        android:textColor="@color/value"
        android:textSize="24sp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/last_wscore_tag"
        app:layout_constraintLeft_toRightOf="@+id/ave_wscore"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/ave_wscore"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_marginLeft="318dp"
        android:layout_marginTop="-7dp"
        android:text="RRA wpm"
        android:textColor="@color/value"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ave_tag"/>

    <TextView
        android:id="@+id/left_graph_tag"
        android:layout_width="211dp"
        android:layout_height="15dp"
        android:text="Sentence Evaluation Scores"
        android:textColor="@color/tag_colour"
        android:textSize="14sp"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/section_name"/>

    <TextView
        android:id="@+id/last_sscore_tag"
        android:layout_width="69dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:text="Last Score:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/left_graph_tag"
        app:layout_constraintLeft_toRightOf="@+id/ave_sscore"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/ave_sscore_tag"
        android:layout_width="98dp"
        android:layout_height="15dp"
        android:text="Average Score:"
        android:textColor="@color/tag_colour"
        android:textSize="12sp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/left_graph_tag"/>

    <TextView
        android:id="@+id/last_seval_score"
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:text="SSL wpm "
        android:textColor="@color/value"
        android:textSize="24sp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/last_sscore_tag"
        app:layout_constraintLeft_toRightOf="@+id/ave_sscore"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/ave_sscore"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_marginLeft="31dp"
        android:text="SSA wpm"
        android:textColor="@color/value"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="-7dp"
        app:layout_constraintTop_toBottomOf="@+id/ave_sscore_tag"/>

    <LinearLayout
        android:id="@+id/student_graph_left"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:background="#303030"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ave_sscore">
    </LinearLayout>

    <TextView
        android:id="@+id/right_graph_tag"
        android:layout_width="247dp"
        android:layout_height="15dp"
        android:text="Random Word Evaluation Scores"
        android:textColor="@color/tag_colour"
        android:textSize="14sp"
        android:layout_marginLeft="318dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/last_eval_date"/>

    <LinearLayout
        android:id="@+id/student_graph_right"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:layout_marginLeft="318dp"
        android:background="#303030"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ave_wscore">
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
